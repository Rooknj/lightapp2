{
  "name": "lightapp2-server",
  "version": "0.1.0",
  "private": true,
  "description": "GraphQL Server for Lightapp2.",
  "dependencies": {
    "apollo-server-express": "^1.3.0",
    "async-mqtt": "^1.0.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "casual": "^1.5.19",
    "chalk": "^2.4.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-import": "^0.4.5",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^2.13.0",
    "sequelize": "^4.38.0",
    "sqlite": "^2.9.2",
    "subscriptions-transport-ws": "^0.9.7"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "src/**/*.{js,json,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "test": "echo test",
    "build": "babel src --out-dir lib --copy-files",
    "start": "NODE_ENV=development BABEL_ENV=development nodemon src/server.js --exec babel-node",
    "startLocal": "nodemon src/server.js --exec babel-node",
    "startMock": "MOCK=true nodemon src/server.js --exec babel-node",
    "publishProd": "./publish.sh -t latest -Y",
    "publishTest": "./publish.sh -t test -Y"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "bin": {
    "prod-server": "lib/server.js"
  },
  "pkg": {
    "assets": "lib/data/typeDefs.graphql"
  },
  "main": "lib/server.js"
}
